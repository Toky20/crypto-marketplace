/**
 * @swagger
 * /createUserTemp:
 *   post:
 *     summary: Créer un utilisateur temporaire et envoyer un e-mail de vérification.
 *     requestBody:
 *       required: true
 *       content:
 *         application/json:
 *           schema:
 *             type: object
 *             properties:
 *               mail:
 *                 type: string
 *                 description: Adresse e-mail de l'utilisateur.
 *               mdp:
 *                 type: string
 *                 description: Mot de passe de l'utilisateur.
 *     responses:
 *       200:
 *         description: Utilisateur créé avec succès.
 *       500:
 *         description: Erreur interne du serveur.
 */

/**
 * @swagger
 * /createUser:
 *   post:
 *     summary: Transférer les données d'un utilisateur temporaire vers un stockage permanent.
 *     responses:
 *       200:
 *         description: Utilisateur créé avec succès.
 *       400:
 *         description: ID de l'utilisateur temporaire manquant.
 *       500:
 *         description: Erreur interne du serveur.
 */

/**
 * @swagger
 * /auth:
 *   post:
 *     summary: Authentifier un utilisateur.
 *     requestBody:
 *       required: true
 *       content:
 *         application/json:
 *           schema:
 *             type: object
 *             properties:
 *               mail:
 *                 type: string
 *                 description: Adresse e-mail de l'utilisateur.
 *               mdp:
 *                 type: string
 *                 description: Mot de passe de l'utilisateur.
 *     responses:
 *       200:
 *         description: Authentification réussie.
 *       401:
 *         description: Identifiants invalides.
 */

/**
 * @swagger
 * /reset-attempts:
 *   get:
 *     summary: Réinitialiser les tentatives de connexion d'un utilisateur.
 *     parameters:
 *       - in: query
 *         name: email
 *         schema:
 *           type: string
 *           description: Adresse e-mail de l'utilisateur.
 *         required: true
 *     responses:
 *       200:
 *         description: Tentatives réinitialisées avec succès.
 *       400:
 *         description: Paramètre e-mail manquant.
 *       500:
 *         description: Erreur interne du serveur.
 */

/**
 * @swagger
 * /sendPinEmail:
 *   get:
 *     summary: Envoyer un code PIN à l'adresse e-mail d'un utilisateur.
 *     parameters:
 *       - in: query
 *         name: mail_user
 *         schema:
 *           type: string
 *           description: Adresse e-mail de l'utilisateur.
 *         required: true
 *     responses:
 *       200:
 *         description: Code PIN envoyé avec succès.
 *       404:
 *         description: Utilisateur non trouvé.
 *       500:
 *         description: Erreur interne du serveur.
 */

/**
 * @swagger
 * /verifyPin:
 *   post:
 *     summary: Vérifier le code PIN d'un utilisateur.
 *     parameters:
 *       - in: query
 *         name: mail_user
 *         schema:
 *           type: string
 *           description: Adresse e-mail de l'utilisateur.
 *         required: true
 *       - in: query
 *         name: pin
 *         schema:
 *           type: string
 *           description: Code PIN de l'utilisateur.
 *         required: true
 *     responses:
 *       200:
 *         description: Code PIN vérifié avec succès.
 *       400:
 *         description: Code PIN expiré.
 *       404:
 *         description: Aucun code PIN trouvé.
 *       500:
 *         description: Erreur interne du serveur.
 */

/**
 * @swagger
 * /checkToken:
 *   post:
 *     summary: Vérifier la validité d'un token.
 *     requestBody:
 *       required: true
 *       content:
 *         application/json:
 *           schema:
 *             type: object
 *             properties:
 *               token:
 *                 type: string
 *                 description: Token à vérifier.
 *     responses:
 *       200:
 *         description: Token valide et rafraîchi.
 *       400:
 *         description: Token manquant ou invalide.
 *       500:
 *         description: Erreur interne du serveur.
 */

/**
 * @swagger
 * /updatePassword:
 *   post:
 *     summary: Mettre à jour le mot de passe d'un utilisateur.
 *     requestBody:
 *       required: true
 *       content:
 *         application/json:
 *           schema:
 *             type: object
 *             properties:
 *               newPassword:
 *                 type: string
 *                 description: Nouveau mot de passe.
 *     responses:
 *       200:
 *         description: Mot de passe mis à jour avec succès.
 *       400:
 *         description: Token manquant ou invalide.
 *       500:
 *         description: Erreur interne du serveur.
 */
